{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2017.object",
      "es2016"
    ],
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "src/*",
        "packages/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}